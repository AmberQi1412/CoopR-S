<% content_for :mHeader do %>
  <script type="text/javascript" src="http://marak.com/faker.js/js/faker.js"></script>
  <%= javascript_include_tag 'asswordMeter', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'random', 'data-turbolinks-track' => true %>
<% end %>
  


<h2>Sign up</h2>

<%= form_for @user, as: :user, url: {action: "create"} do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
    <input type="button" onClick="makeEmail('user_email')" value="Give me an email" />
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :onkeyup => "updateMeter()"  %>
    <meter id = "passwordMeter" min = "0" max = "4" low = "2" optimum = "4"></meter>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.radio_button :type, 'Student', :checked => true %> 
    <%= label :type_student, 'Student' %>
    <%= f.radio_button :type, 'Company' %>
    <%= label :type_company, 'Company' %>
  </div>

<!--   <div class="field">
  <%= fields_for :preferences do |pf| %>
      <%= pf.label :name %><br />
      <%= pf.text_field :name, autocomplete: "off", :onkeyup => "updateMeter()" %>
  <% end %>
  </div> -->

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
