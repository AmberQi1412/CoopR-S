<% content_for :mHeader do %>
    <%= stylesheet_link_tag 'application', 'data-turbolinks-track' => true %>
<% end %>

<% content_for :mLogin do %>
    <%= render :partial => '/login/login' %>
<% end %>

<% content_for :mFrame do %>
    
    <script type="text/javascript">
      updateUrl();
    </script>
        
       
        
        <% if user_signed_in? %>
        
            <% if current_user.admin? %>
              
                <ul>
                  <li><a href="/"><img class="topnav-icons" src="http://i.imgur.com/RO5VA6h.png" /></a></li>
                  <li><%= link_to "PROTECTED", {:controller => :protected, :action => :index} %></li>
                  <li class="dropdown"><a href="/admin/" class="dropbtn">ACTION</a>
                        <div class="dropdown-content">
			                      	<a href="/admin/">VIEW ALL POSTS</a>
			                      	<a href="/posts/new">NEW POSTS</a>
		                      		<a href="/posts/">MANAGE POSTS</a>
		                  	</div>
		              </li>
                  <li><a href="/posts/new" data-turbolinks="false">WRITE A POST</a></li>
                  <li style="float:right"><%= link_to destroy_user_session_path, :method => :delete do %><img class="signout-icon" src="http://i.imgur.com/qgNZck9.png"/><span>&nbsp;&nbsp;SIGN OUT</span><% end %> </li> 
                </ul>
             
            <% else %>
              
                <ul>
                  <li><a href="/"><img class="topnav-icons" src="http://i.imgur.com/RO5VA6h.png"/></a></li>
                  <li> <%= link_to "PROTECTED", {:controller => :protected, :action => :index} %></li>
                  <li> <%= link_to('EDIT PREFERENCE', edit_preference_path( current_user.id ) ) %></li>  
                  <li> <%= link_to('MY PROFILE', profiles_path ) %> </li> 
                  <li> <a href="/posts/new" data-turbolinks="false">WRITE A POST</a></li> 
                  <li style="float:right"><%= link_to destroy_user_session_path, :method => :delete do %><img class="signout-icon" src="http://i.imgur.com/qgNZck9.png"/><span>&nbsp;&nbsp;SIGN OUT</span><% end %> </li> 
                </ul>
              
            <% end %>
        <% else %>
                <ul>
                  <li><a href="/"><img class="topnav-icons" src="http://i.imgur.com/RO5VA6h.png"/></a></li>
                  <li> <a href="/text">Lorem</a></li> 
                  <li style="float:right"><%= link_to new_user_session_path do %><img class="signout-icon" src="http://i.imgur.com/qgNZck9.png"/><span>&nbsp;&nbsp;LOG IN</span><% end %> </li> 
                  <li style="float:right"><a href="/users/sign_up"><img class="signout-icon" src="http://i.imgur.com/qgNZck9.png"/>&nbsp;&nbsp;SIGN UP</a></li> 
                </ul>
                
        <% end %>

<% end %>


<div class="table-title">
        <h3>Listing Posts</h3>
</div>

<table class="table-list-users">
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Owner</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.type %></td>
        <td><%= post.owner_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

