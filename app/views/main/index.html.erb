<html>
    

<% content_for :mLogin do %>
    <%= render :partial => '/login/login' %>
<% end %>


<% content_for :mFrame do %>

<script type="text/javascript">
  updateUrl();
</script>
<body>
     <ul>
        <li>
            <%= link_to 'Protected Region', {:controller => :protected, :action => :index} %>
        </li>
        <li>
            <a href="/users/sign_up">Register</a>
        </li>
        <% if user_signed_in? %>
            <% if current_user.admin? %>
            <li>
                <a href="/admin/">Admin page</a>        
            </li>
            <% else %>
            <li>
                <%= link_to('Edit Preference', edit_preference_path( current_user.id ) ) %>        
            </li>
            <% end %>
            <li>
                <%= link_to('Write a post', new_post_path ) %>        
            </li>
        <% else %>
            <li>
                <%= link_to('Login', new_user_session_path)  %>  
            </li>
        <% end %>
     </ul>


<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Owner</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.type %></td>
        <td><%= post.owner_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<% end %>
</body>
</html>